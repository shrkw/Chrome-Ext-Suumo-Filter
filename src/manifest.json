{
  "manifest_version": 2,
  "name": "Suumo Properties Filter",
  "description": "Filter properties you do not want to see.",
  "version": "0.0.1",
  "icons": {
    "16": "resources/icon_256.png",
    "48": "resources/icon_256.png",
    "128": "resources/icon_256.png"
  },
  "permissions": [
    "storage",
    "http://suumo.jp/*"
  ],
  "browser_action": {
    "default_icon": "resources/icon_256.png",
    "default_popup": "resources/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://suumo.jp/*"],
      "js": ["jquery-2.2.1.min.js", "app.js"],
      "css": ["resources/style.css"],
      "run_at": "document_end"
    }
  ]
}
